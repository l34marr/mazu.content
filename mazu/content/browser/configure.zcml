      permission="zope2.View"
      />

  <browser:view
      name="image_tile"
      for="..photo.IPhoto"
      class=".photo_scale_alias.PhotoScaleAlias"
      permission="zope2.View"
      />

  <browser:view
      name="image_icon"
      for="..photo.IPhoto"
      class=".photo_scale_alias.PhotoScaleAlias"
      permission="zope2.View"
      />

  <browser:view
      name="image_listing"
      for="..photo.IPhoto"
      class=".photo_scale_alias.PhotoScaleAlias"
      permission="zope2.View"
      />

</configure>
